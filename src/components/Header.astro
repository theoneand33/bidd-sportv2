---
/*
  Header.astro
  Reusable header component extracted from index.astro.

  Props:
    - logoSrc (string)  : URL/path to the school logo image (default: same as original page)
    - title (string)    : Main title text (default: "Bidd Sports")
    - subtitle (string) : Subtitle text (default: "Your official tool for managing sports competitions.")

  Notes:
    - Keeps the `id="schoolLogo"` on the <img> so existing client-side scripts that reference it continue to work.
    - Exposes a default <slot /> at the end of the header for optional action buttons (e.g., "+ Add Competition").
*/
const {
  logoSrc = '/HurunuiCollegeLogoRefresh-07%20large.png',
  title = 'Bidd Sports',
  subtitle = 'Your official tool for managing sports competitions.'
} = Astro.props;
---
<header class="flex items-center justify-between gap-4 md:gap-6 mb-6 md:mb-8">
  <div class="flex items-center gap-4 md:gap-6">
    <div class="p-2 bg-white rounded-lg shadow-md">
      <img
        id="schoolLogo"
        src={logoSrc}
        alt="School Logo"
        class="w-20 h-20 md:w-24 md:h-24 object-contain"
      />
    </div>

    <div>
      <h1 class="text-3xl md:text-4xl font-bold text-slate-900">{title}</h1>
      <p class="text-slate-600 mt-1">{subtitle}</p>
    </div>
  </div>

  <!-- Slot for optional header actions (keeps layout compatible with original page) -->
  <div>
    <slot />
  </div>
</header>
